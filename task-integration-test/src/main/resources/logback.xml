<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %X{X-request-id} %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>
	<logger name="it.francescofiora" level="debug" />
  <root level="INFO">
      <appender-ref ref="STDOUT" />
  </root>
</configuration>
